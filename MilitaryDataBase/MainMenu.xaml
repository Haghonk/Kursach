        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="600">
    <Grid Loaded="Grid_Loaded">
        <Label Content="Добро пожаловать в базу данных В.А.Л." HorizontalAlignment="Left" Margin="27,26,0,0" VerticalAlignment="Top" Height="52" Width="538" FontSize="20"/>
        <Button Content="Запись нового груза" HorizontalAlignment="Left" Margin="27,83,0,0" VerticalAlignment="Top" Width="171" Height="46" FontSize="16" Click="Button_Click_1"/>
        <Button Content="Просмотр базы данных" HorizontalAlignment="Left" Margin="27,134,0,0" VerticalAlignment="Top" Width="171" Height="46" FontSize="16" Click="Button_Click_Enter_DataBse"/>
        <Button Content="Выйти" HorizontalAlignment="Left" Margin="27,236,0,0" VerticalAlignment="Top" Width="171" Height="46" FontSize="16" Click="Button_Click"/>
        <Button x:Name="Archive" Content="Архив" HorizontalAlignment="Left" Margin="27,185,0,0" VerticalAlignment="Top" Width="171" Height="46" FontSize="16" Click="Button_Click_Enter_Archive"/>

    </Grid>
</Window>
