<Window x:Class="MilitaryDataBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilitaryDataBase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300" Loaded="MainWindow_Load">
    <Grid>
        <Label Content="Добро пожаловать в программу записи" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="и учета военного сняряжения и техники" HorizontalAlignment="Left" Margin="12,56,0,0" VerticalAlignment="Top" FontSize="14" Height="32"/>
        <Label Content="Войдите в программу или зарегестрируйтесь" HorizontalAlignment="Left" Margin="4,93,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button Content="Войти" Margin="61,174,0,0" VerticalAlignment="Top" Height="54" HorizontalAlignment="Left" Width="178" Click="Button_Click_Enter"/>
        <Button Content="Зарегистрироваться" Margin="61,281,0,0" VerticalAlignment="Top" Height="54" HorizontalAlignment="Left" Width="178" Click="Button_Click_Registration"/>
        <Button Content="Справка" HorizontalAlignment="Left" Margin="233,389,0,0" VerticalAlignment="Top" Width="49" Click="Button_Click_Info"/>

    </Grid>
</Window>
